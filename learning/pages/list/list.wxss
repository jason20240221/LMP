.swiper-container {
  height: 150px; 
}
.item {
  height: 100%;
  text-align: center;
  line-height: 150px;
}
swiper-item:nth-child(1) .item {
  background: lightgreen;
}
swiper-item:nth-child(2) .item {
  background: lightblue;
}
swiper-item:nth-child(3) .item {
  background: lightcoral;
}