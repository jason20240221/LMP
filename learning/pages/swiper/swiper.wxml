<!--pages/swiper/swiper.wxml-->
<swiper class="swiper-box" circular="true" autoplay="" vertical="" indicator-dots="true"	indicator-type="expand" layout-type="tinder" transformer-type="scaleAndFade" >
  <block wx:for="{{items}}" wx:key="index">
    <swiper-item>
      <image src="{{item.imgUrl}}"></image>
      <view class="card-info">
        <text>{{item.title}}</text>
      </view>
    </swiper-item>
  </block>
</swiper>