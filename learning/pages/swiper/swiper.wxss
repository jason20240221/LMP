/* pages/swiper/swiper.wxss */
.swiper-box {
  height: 50vh; /* 设置swiper的高度 */
  margin: 10vh 2vh;
}
swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
  background: lightblue;
  border-radius: 10rpx;
  
} 
.card-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  color: #fff;
  border-radius: 10rpx;
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}
image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}